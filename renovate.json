{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ansible": {
    "fileMatch": ["\\.yml$"]
  },

  "packageRules": [
    {
      "packageNames": ["node_exporter"],
      "datasource": "github",
      "repositoryUrl": "https://github.com/prometheus/node_exporter",
      "versioning": "semver"
    },
    {
      "packageNames": ["grafana"],
      "datasource": "github",
      "repositoryUrl": "https://github.com/grafana/grafana",
      "versioning": "semver"
    },
    {
      "packageNames": ["loki"],
      "datasource": "github",
      "repositoryUrl": "https://github.com/grafana/loki",
      "versioning": "semver"
    },
    {
      "packageNames": ["prometheus"],
      "datasource": "github",
      "repositoryUrl": "https://github.com/prometheus/prometheus",
      "versioning": "semver"
    }
  ]
}
